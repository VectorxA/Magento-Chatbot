<layout>
	<customer_account>
		<reference name="customer_account_navigation">
			<action method="addLink">
				<name>chatbot_settings</name>
				<path>chatbot/settings/index</path>
				<label>Customer Profile</label>
			</action>
		</reference>
	</customer_account>
	<chatbot_settings_index>
		<update handle="customer_account" />
		<reference name="my.account.wrapper">
			<block type="core/template" name="chatbot_content" template="werules_chatbot_config.phtml"/>
		</reference>
	</chatbot_settings_index>
	<chatbot_chatdata_index>
		<remove name="head" />
		<remove name="right" />
		<remove name="left" />
		<remove name="header" />
		<remove name="footer" />
		<reference name="content">
			<block type="core/template" name="chatbot_content" template="werules_chatbot_view.phtml"/>
		</reference>
	</chatbot_chatdata_index>
	<chatbot_chatdata_telegram>
		<remove name="head" />
		<remove name="right" />
		<remove name="left" />
		<remove name="header" />
		<remove name="footer" />
		<reference name="content">
			<block type="core/template" name="chatbot_content" template="werules_chatbot_view.phtml"/>
		</reference>
	</chatbot_chatdata_telegram>
	<chatbot_chatdata_facebookf>
		<remove name="head" />
		<remove name="right" />
		<remove name="left" />
		<remove name="header" />
		<remove name="footer" />
		<reference name="content">
			<block type="core/template" name="chatbot_content" template="werules_chatbot_view.phtml"/>
		</reference>
	</chatbot_chatdata_facebookf>
</layout>